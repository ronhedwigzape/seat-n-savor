RewriteEngine On
RewriteBase /seatsavor/

# Exclude assets from rewrite rule
RewriteCond %{REQUEST_URI} !\.(css|js|svg|jpg|jpeg|png|gif|woff2|ico|ttf)$ [NC]

# Redirect all requests to index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /seatsavor/public/index.html [L]

# Exclude the public and app directories from the rewrite rule
RewriteCond %{REQUEST_URI} !^/seatsavor/public/
RewriteCond %{REQUEST_URI} !^/seatsavor/app/
RewriteRule ^(.*)$ /seatsavor/public/$1 [L]

